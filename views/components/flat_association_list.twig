{% import 'main/local_macros.twig' as lm %}

<div class="vgap-2 br-word flex flex-wrap flex-h-gap-2 flex-v-gap-1">
    {% for assoc in associations %}
        <span class="label {{ lm.scope_class(assoc) }}">
        {% set addendum = (assoc.usageCount > 1) ? ' (' ~ assoc.usageCount ~ ')' : '' %}
            {% include 'components/association.twig' with { 'association': assoc, 'by_word': word, 'headless': true, 'addendum': addendum } only %}
        </span>
    {% endfor %}
</div>
