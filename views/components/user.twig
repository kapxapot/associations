{% set real_kid = user.age and not user.is_mature %}
{% set kid_chunk = real_kid ? ' (ребенок!)' : '' %}
{% if user.is_alice_user %}<span class="alice-avatar" title="{{ user.display_name }}{{ kid_chunk }} (Яндекс.Алиса)" data-toggle="tooltip">{% include 'svg/alice.twig' %}</span>{% else %}<img src="{{ user.gravatar_url }}" class="avatar avatar--inline{% if big %} avatar--big{% endif %}" title="{{ user.display_name }}{{ kid_chunk }}{% if user.is_telegram_user %} (Telegram){% endif %}" data-toggle="tooltip">{% endif %}{% if full %} <span class="b">{{ user.display_name }}{% if real_kid %} <i class="fas fa-child kid-color" title="Ребенок" data-toggle="tooltip"></i>{% endif %}{% if user.is_telegram_user %} <i class="fab fa-telegram-plane telegram-color" title="Telegram" data-toggle="tooltip"></i>{% endif %}</span>{% endif %}
