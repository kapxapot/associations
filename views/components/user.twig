{% set real_kid = user.age and not user.isMature %}
{% set kid_chunk = real_kid ? ' 👶' : '' %}
{% if user.is_alice_user %}<span class="alice-avatar" title="{{ user.display_name }}{{ kid_chunk }} (Яндекс.Алиса)" data-toggle="tooltip">{% include 'svg/alice.twig' %}</span>{% elseif user.is_sber_user %}<span class="sber-avatar" title="{{ user.display_name }}{{ kid_chunk }} (SmartMarket)" data-toggle="tooltip">{% include 'svg/sber.twig' %}</span>{% elseif user.is_telegram_user %}<i class="fab fa-telegram-plane telegram-color" title="{{ user.display_name }}{{ kid_chunk }} (Telegram)" data-toggle="tooltip"></i>{% else %}<img src="{{ user.gravatar_url }}" class="avatar avatar--inline{% if big %} avatar--big{% endif %}" title="{{ user.display_name }}{{ kid_chunk }}" data-toggle="tooltip">{% endif %}{% if full %} <span class="b">{{ user.display_name }}{% if real_kid %} <span title="Ребенок" data-toggle="tooltip">👶</span>{% endif %}</span>{% endif %}
