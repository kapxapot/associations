<img src="{{ user.gravatar_url }}" class="avatar avatar--inline{% if big %} avatar--big{% endif %}" title="{{ user.display_name }}{% if not user.is_mature %} (ребенок!){% endif %}{% if user.is_telegram_user %} (Telegram){% endif %}" data-toggle="tooltip">{% if full %} <span class="b">{{ user.display_name }}{% if not user.is_mature %} <i class="fas fa-child kid-color" title="Ребенок" data-toggle="tooltip"></i>{% endif %}{% if user.is_telegram_user %} <i class="fab fa-telegram-plane telegram-color" title="Telegram" data-toggle="tooltip"></i>{% endif %}</span>{% endif %}
