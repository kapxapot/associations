                {% else %}
                    <span class="label label-primary">{{ scopeLock|raw }}–ª–∏—á–Ω–∞—è</span>
                {% endif %}

                {% set severityLock = association.hasSeverityOverride ? '<i class="fas fa-lock"></i> ' : '' %}

                {% if association.isOffending %}
