                {% set scopeLock = association.hasScopeOverride ? '<i class="fas fa-lock"></i> ' : '' %}

                {% if association.isDisabled %}
                    <span class="label label-danger">{{ scopeLock|raw }}–æ—Ç–∫–ª—é—á–µ–Ω–∞</span>
                {% elseif association.isInactive %}
                    <span class="label label-warning">{{ scopeLock|raw }}–Ω–µ–∞–∫—Ç–∏–≤–Ω–∞—è</span>
                {% elseif association.isPublic %}
                    <span class="label label-success"><i class="fas {{ association.hasScopeOverride ? 'fa-lock' : 'fa-check' }}"></i> –ø—É–±–ª–∏—á–Ω–∞—è</span>
                {% elseif association.isCommon %}
