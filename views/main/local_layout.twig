{% extends 'main/layout.twig' %}

{% set no_admin_link = not auth.user.isAdmin %}

{% set no_social = true %}
{% set sidebar = true %}

{% set more_angular %}
    {% if not debug %}
        $scope.postSuccess = (data) => {
            reloadWindow();
        };
    {% endif %}

    $scope.moreSignUpFields = (obj) => {
        obj.age = $('#signUpForm').find('#su_age').val();
        return obj;
    };

    $scope.reloadElement = (url, id, errorMessage) => {
        $scope.ajax({
            method: 'get',
            url: url,
            noSuccessMessage: true,
            onSuccess: (data) => {
                let compiled = $scope.compile(data);

                $('#' + id).html(compiled);
                $scope.updateUi();
            },
            onError: () => {
                console.log('Failed to reload \'' + id + '\' element, url = ' + url + '.');
            }
        });
    };

    $scope.reloadLanguageStats = () => {
        $scope.reloadElement(
            '{{ path_for('main.chunks.stats.language') }}',
            'language-stats'
        );
    };

    $scope.reloadLatestWords = () => {
        $scope.reloadElement(
            '{{ path_for('main.chunks.latest.words') }}',
            'latest-words'
        );
    };

    $scope.reloadLatestAssociations = () => {
        $scope.reloadElement(
            '{{ path_for('main.chunks.latest.associations') }}',
            'latest-associations'
        );
    };

    $scope.reloadSidebar = () => {
        $scope.reloadLanguageStats();
        $scope.reloadLatestWords();
        $scope.reloadLatestAssociations();
    };

    $scope.reloadSidebar();

    // load auto chunks
    $('.deferred-load.auto-chunk').each((index, element) => {
        const id = element.id;
        const queryStr = objParamsToString(element.dataset);

        let url = '{{ root }}/chunks/' + id;

        if (queryStr.length > 0) {
            url += '?' + queryStr;
        }

        $scope.reloadElement(url, id);
    });

    {{ even_more_angular }}
{% endset %}

{% block more_js %}
    <script src="{{ folders.local }}js/main.js"></script>

    {{ even_more_js }}
{% endblock %}
